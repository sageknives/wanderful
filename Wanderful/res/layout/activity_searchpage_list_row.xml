<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:padding="@dimen/listborder" >

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/white"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/eventLogo"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/bookmark_padding"
        android:layout_marginLeft="@dimen/button_text"
        android:layout_marginTop="@dimen/bookmark_padding"
        android:background="@color/white"
        android:contentDescription="@string/map"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bookmark_padding"
        android:layout_marginRight="@dimen/button_text"
        android:layout_marginTop="@dimen/bookmark_padding"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/bookmark_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eventName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               
                android:textSize="18sp"
                android:textStyle="bold" />

       
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                
                android:textSize="16sp" />

        </LinearLayout>
          <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/eventAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>