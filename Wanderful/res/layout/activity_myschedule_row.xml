<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
   
    android:orientation="horizontal" >

    <Button
        android:id="@+id/deletebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/deleteButton"
        android:focusable="false"
        />

    <TextView
        android:id="@+id/resulttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/deletebutton"
        android:layout_marginLeft="48dp"
       android:text="time"
        android:textSize="16sp" />

      <TextView
          android:id="@+id/resultname"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBaseline="@+id/resulttime"
          android:layout_alignBottom="@+id/resulttime"
          android:layout_marginLeft="28dp"
          android:layout_toRightOf="@+id/resulttime"
          android:text="name"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/performancestage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignBottom="@+id/deletebutton"
          android:layout_alignLeft="@+id/resultname"
          android:text="stage"
          android:textSize="16sp"
          android:textStyle="bold" />

</RelativeLayout>