<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wanderfulbackground"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/performerimagebig"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="@dimen/bookmark_padding"
            android:layout_marginRight="@dimen/bookmark_padding"
            android:layout_marginTop="@dimen/bookmark_padding"
            android:background="@color/white"
            android:contentDescription="@string/map"
            android:padding="@dimen/detail_padding"
            android:paddingBottom="0dp"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bookmark_padding"
            android:layout_marginRight="@dimen/bookmark_padding"
            android:background="@color/white"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/detail_padding"
                    android:paddingTop="@dimen/detail_padding"
                    android:text="@string/name"
                    android:textSize="@dimen/detail_name" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/detail_padding"
                    android:text="@string/time"
                    android:textSize="@dimen/detail_information" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="@dimen/detail_padding"
                    android:text="@string/location"
                    android:textSize="@dimen/detail_information" />

                <TextView
                    android:id="@+id/genre"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/detail_padding"
                    android:text="@string/genre"
                    android:textSize="@dimen/detail_information" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/bookmark_padding"
                android:layout_marginRight="@dimen/bookmark_padding"
                android:background="@color/white"
                android:orientation="vertical" >

                <ToggleButton
                    android:id="@+id/addbutton"
                    android:layout_width="40dp"
                    android:layout_height="55dp"
                    android:background="@drawable/button_selector"
                    android:focusable="false"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:paddingBottom="@dimen/bookmark_padding"
                    android:text=""
                    android:textOff=""
                    android:textOn="" />

                <ImageButton
                    android:id="@+id/youtube"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/white"
                    android:contentDescription="@string/title_activity_youtube"
                    android:paddingTop="@dimen/bookmark_padding"
                    android:src="@drawable/youtube" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/bookmark_padding"
            android:layout_marginRight="@dimen/bookmark_padding"
            android:layout_weight="1"
            android:background="@color/white"
            android:paddingLeft="@dimen/detail_padding"
            android:text="@string/description"
            android:textSize="@dimen/detail_description" />
    </LinearLayout>

</ScrollView>